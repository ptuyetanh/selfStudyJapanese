<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
    <form class="form_sign-up" action="/signup" method="post">
        <div class="col-8">
            <h3>Đăng kí tài khoản</h3>
            <div class="mb-4">
                <input type="text" name="fullname" id="" class="form-control" placeholder="Họ và tên"
                    aria-describedby="helpId" />
                <small id="helpId" class="form-text"></small>
            </div>
            <div class="mb-4">
                <input type="text" class="form-control" name="email" id="" aria-describedby="helpId" placeholder="Email" />
                <small id="helpId" class="form-text"></small>
            </div>
            <div class="mb-4">
                <input type="text" name="phonenumber" id="" class="form-control" placeholder="Số điện thoại"
                    aria-describedby="helpId" />
                <small id="helpId" class="form-text"></small>
            </div>
            <div class="mb-4">
                <input type="date" class="form-control" name="dateofbirth" id="" aria-describedby="helpId" placeholder="" />
                <small id="helpId" class="form-text"></small>
            </div>
            <div class="mb-4 pass">
                <input type="password" class="form-control" name="password" id="input_pass" aria-describedby="helpId"
                    placeholder="Mật khẩu" />
                <i class="fa-solid fa-eye"></i>
                <i class="fa-solid fa-eye-slash hidden"></i>
                <small id="helpId" class="form-text"></small>
            </div>
            <button type="submit" class="btn btn-primary btn_sign_up">
                Đăng ký
            </button>

        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>